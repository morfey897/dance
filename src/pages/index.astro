---
import { getPreferableLangs } from "../utils/url";
import { getEnv } from "../services/cloudflare";

const { LANGS } = getEnv(Astro.request);
let redirectLang =
	getPreferableLangs(Astro.request).find((code) => LANGS.includes(code)) ||
	LANGS[0];

if (redirectLang == "ru") {
	redirectLang = "uk";
}
return Astro.redirect(`/${redirectLang}`, 301);
