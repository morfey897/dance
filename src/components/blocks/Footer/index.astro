---
import Footer from "./Footer";
import type { FooterType } from "./types";

let localBusiness = [];
let navigation = [];
try {
  localBusiness = await Astro.glob("../../../../content/local-business.md");
} catch (e) {}

try {
  navigation = await Astro.glob("../../../../content/navigation.md");
} catch (e) {}

const localBusinessProps = (localBusiness || [])[0]?.frontmatter || {};
const { footer } = (navigation || [])[0]?.frontmatter || {};
const props: FooterType = { navigation: footer, ...localBusinessProps };
---

<Footer {...props} />
