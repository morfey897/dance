---
import About from "./About";
import type { AboutType } from "./types";

let contacts = [];
try {
  contacts = await Astro.glob("../../../../content/about/*.md");
} catch (e) {}

const indexAbout = contacts.find((data) => /\/index\.md?$/.test(data.file));

const { Content } = indexAbout || { Content: () => {} };
const props = { ...indexAbout?.frontmatter } as AboutType;
---

<About {...props}>
  <Content />
</About>
